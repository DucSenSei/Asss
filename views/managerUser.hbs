<a style="font-size: 40px;" href="/admin/home">Back</a>
{{{titleView}}}

<div class="container">
    
    <form action="" class="row">
 <a style="left: 100px;" class="col-sm-6" href="/admin/user"><h1>List User</h1></a>
    <a style="right: 0px;" class="col-sm-6" href="/admin/product"><h1>List Products</h1></a>
    </form>
    <!-- Search box -->
    <form action="/admin/search">
        <div class="form-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Nhập họ tên" name="search">
        </div>
    </form>

    <!-- Table to display user list -->
    <div class=" text-right float-right">
        <a href="/admin/addUsers" class="btn btn-primary">Add User</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>password</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="">
            {{#each users}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td><img src="{{this.image}}" style="width: 70px; height: 50px; border-radius: 60%;
                border-color: black; border-width: 10px;" /> </td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>
                    <a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete/{{this._id}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>